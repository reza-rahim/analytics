[Unit]
Description=Apache Spark Master 
After=network.target

[Service]
User={{ spark_user }}
Group={{ application_group }}
Environment="AWS_S3_ENDPOINT={{ s3_protocol }}://{{ fs_s3a_endpoint }}"
Environment="AWS_REGION=us-east-1"
Environment="MINIO_REGION=us-east-1"
Environment="AWS_REGION=us-east-1"

ExecStartPre={{ lockbox_dir }}/decrypt_lockbox.sh
ExecStart=/bin/bash -c "source {{ tmpfs_dir }}/{{ lockbox_env }};  rm -f  {{ tmpfs_dir }}/{{ lockbox_env }} ;/opt/spark/sbin/start-worker.sh  spark://{% for host in groups['spark_master'] -%} {{ host }}:{{ spark_rpc_port }}{% if not loop.last %},{% endif %} {%- endfor %} "

ExecStop=/opt/spark/sbin/start-worker.sh
Restart=on-failure

[Install]
WantedBy=multi-user.target
